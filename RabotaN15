#include <iostream>

using namespace std;

int main(){
    setlocale(0, "");

    int figureSize;
    char texture;

    cout << "Плюсик\n\n";

    cout << "Введите размер плюсика: ";
    cin >> figureSize;

    cout << "Выберите текстуру: ";
    cin >> texture;

    system("cls");

    int middle = figureSize / 2;

    for(int i = 0; i < figureSize; i++){
        for(int j = 0; j < figureSize; j++){
            if(i == middle){
                cout << texture;
            } else if(j == middle){
                cout << texture;
            } else {
                cout << " ";
            }
        }
        cout << "\n";
    }

    return 0;
}